<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Color Palette or Color Selection UI Elements -->
    <!-- Customize this section as per your color picker design -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/skinColorImage"
            android:src="@drawable/skincolors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/hex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#000000"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="@id/skinColorImage"
            app:layout_constraintEnd_toEndOf="@id/skinColorImage"
            app:layout_constraintBottom_toBottomOf="@id/skinColorImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/skinColorImage"
            app:layout_constraintEnd_toEndOf="@id/skinColorImage"
            android:layout_marginTop="30dp"
            android:text="Click on the color machs your skin color"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>