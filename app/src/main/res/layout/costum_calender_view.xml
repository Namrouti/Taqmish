<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customCalenderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"

        >

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_prev"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/currentDatetxt"
            android:text="Current Date"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Sun"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Mon"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Teu"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Wed"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Thu"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Fri"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Sat"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"></GridView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Selected Date"
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/morningtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/morningSep"
            app:layout_constraintBottom_toBottomOf="@id/morningSep"
            android:text="Morning"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/morningSep"
            android:layout_width="5dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toEndOf="@id/morningtxt"
            android:layout_marginStart="5dp"
            android:background="@android:color/holo_blue_bright"
            app:layout_constraintCircleRadius="12dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/morningRecyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/morningSep"
            app:layout_constraintTop_toTopOf="@id/morningSep"
            app:layout_constraintBottom_toBottomOf="@id/morningSep"
            android:layout_marginStart="10dp"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/eveningtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/eveningSep"
            app:layout_constraintBottom_toBottomOf="@id/eveningSep"
            android:text="Evening"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/eveningSep"
            android:layout_width="5dp"
            android:layout_height="80dp"
           app:layout_constraintTop_toBottomOf="@id/morningSep"
            app:layout_constraintStart_toStartOf="@id/morningSep"

            android:background="@android:color/holo_orange_dark"
            app:layout_constraintCircleRadius="12dp"
            android:layout_marginTop="5dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eveningRecyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/eveningSep"
            app:layout_constraintTop_toTopOf="@id/eveningSep"
            app:layout_constraintBottom_toBottomOf="@id/eveningSep"
            android:layout_marginStart="10dp"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/nighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/nightSep"
            app:layout_constraintBottom_toBottomOf="@id/nightSep"
            android:text="Night"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/nightSep"
            android:layout_width="5dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/eveningSep"
            app:layout_constraintStart_toStartOf="@id/eveningSep"

            android:background="@color/black"
            app:layout_constraintCircleRadius="12dp"
            android:layout_marginTop="5dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nightRecyl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/nightSep"
            app:layout_constraintTop_toTopOf="@id/nightSep"
            app:layout_constraintTop_toBottomOf="@id/nightSep"
            android:layout_marginStart="10dp"
            android:layout_margin="5dp"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>