<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grdiant_card_clue">
        <ImageView
            android:id="@+id/groupimage"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_my_icon"
           android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/groupname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/groupimage"
            android:layout_marginTop="40dp"
            android:text="Enter Group Name"
            android:textSize="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            />
        <Spinner
            android:id="@+id/maingroup_spinnar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/groupname"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"

            />
        <Spinner
            android:id="@+id/subgroup_spinnar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/maingroup_spinnar"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginBottom="50dp"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>