<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.LinearLayoutCompat>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toBottomOf="@id/saveProfile"
       android:src="@drawable/ic_person"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20sp"


        />



    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        android:hint="Email Address"
        android:layout_marginTop="10dp"
        />


    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/emailAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        >

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginStart="15dp"/>

    </RadioGroup>
    <com.hbb20.CountryCodePicker
        android:id="@+id/countryCodePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/genderRadioGroup"
        android:layout_marginEnd="15dp"
        />



    <ImageButton
        android:id="@+id/saveProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_check24"/>
    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/genderRadioGroup"
        app:layout_constraintTop_toBottomOf="@id/genderRadioGroup"
        android:hint="First Name"
        android:layout_marginTop="20dp"
        android:maxLength="20"

        />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/firstName"
        app:layout_constraintTop_toBottomOf="@id/genderRadioGroup"
        android:hint="Last Name"
        app:layout_constraintTop_toTopOf="@id/firstName"
        android:maxLength="20"
        android:layout_marginStart="20sp"

        />

    <EditText
        android:id="@+id/birthdate"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:hint="Birth Date"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@id/countryCodePicker"
        app:layout_constraintTop_toTopOf="@id/firstName"
        android:editable="false"


        />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:inputType="number"
        android:maxLength="3"
        app:layout_constraintStart_toStartOf="@id/firstName"
        app:layout_constraintTop_toBottomOf="@id/firstName"
        android:layout_marginTop="20sp"

        />
    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Weight"
        android:inputType="number"
        android:maxLength="3"
       app:layout_constraintTop_toTopOf="@id/height"
        app:layout_constraintStart_toEndOf="@id/height"
        android:layout_marginStart="20sp"

        />
    <EditText
        android:id="@+id/skincolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Skin Color"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/height"
        app:layout_constraintStart_toEndOf="@id/weight"
        android:layout_marginStart="20sp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>