<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/save_all"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_check24"
        android:layout_margin="10dp"
        android:layout_gravity="right"

        />
    <ImageView
        android:id="@+id/color_circle"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/color_pantron"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        >
        <View
            android:id="@+id/colorView"
            android:layout_margin="20sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/grdiant_card_clue"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/addColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/colorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RGB:  Hex"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        />
    <SeekBar
        android:id="@+id/coloralfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"


        />
    <SeekBar
        android:id="@+id/colorbreightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colorsResycle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        />

</LinearLayout>