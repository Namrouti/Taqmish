<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SubType">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/classIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:src="@drawable/moda_icon" />

    <TextView
        android:id="@+id/mainClassName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:text="Class Type"
        android:textSize="35dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/subclaseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub Groups"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_below="@+id/mainClassName"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subclaseTextView"
        android:layout_marginTop="15dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSubClass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>